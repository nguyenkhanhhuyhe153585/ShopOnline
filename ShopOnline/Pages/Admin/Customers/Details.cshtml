@page
@model ShopOnline.Pages.Admin.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div id="content-left">
    <ul>
        <a href="~/admin/dashboard">
        <li>Dashboard</li></a>
        <a href="~/admin/dashboard/orders">
        <li>Orders</li></a>
        <a href="~/admin/products">
        <li>Products</li></a>
        <a href="javascript:void">
        <li class="active">Customers</li></a>
        <a href="~/admin/employees">
        <li>Employees</li></a>
    </ul>
</div>
<div id="content-right">
    <h1>Details</h1>

    <div>
        <h4>Customer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.CompanyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CompanyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ContactName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ContactName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ContactTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ContactTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.IsActive)
            </dd>

        </dl>
    </div>
    <div>
        <button type="button" onclick="DeactiveCustomer(this, '@Model.Customer.CustomerId')">@if ((bool)Model.Customer.IsActive)
            {
                <text>Deactive</text>
            }
            else
            {
                <text>Active</text>
            }</button>
        <a asp-page="./Edit" asp-route-id="@Model.Customer?.CustomerId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
