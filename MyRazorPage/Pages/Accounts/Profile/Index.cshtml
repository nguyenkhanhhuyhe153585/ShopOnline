@page
@model MyRazorPage.Pages.Accounts.Profile.IndexModel
@{
}

<div id="content-left">
    <h3 style="font-weight: normal;">Welcome, @Model.Customer.ContactName</h3>
    <h3>Account Management</h3>
    <ul>
        <a href="#">
        <li class="active">Personal information</li></a>
    </ul>
    <h3>My order</h3>
    <ul>
        <a href="~/accounts/profile/orderhistory">
        <li>All orders</li></a>
        <a href="#">
        <li>Canceled order</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path">Personal information</b></div>
    <div class="content-main">
        <div id="profile-content">
            <div class="profile-content-col">
                <div>Company name: <br />@Model.Customer.CompanyName</div>
                <div>Contact name: <br />@Model.Customer.ContactName</div>
                <div>
                    <input id="btn-edit" type="button" value="Edit info" />
                </div>
            </div>
            <div class="profile-content-col">
                <div>Company title: <br />@Model.Customer.ContactTitle</div>
                <div>Address: <br />@Model.Customer.Address</div>
            </div>
            <div class="profile-content-col">
                <div>Email: <br />@Model.Account.Email</div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("btn-edit").addEventListener("click",function (){
        window.location.href = "profile/editprofile";
    });
</script>
 